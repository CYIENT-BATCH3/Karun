//WAP to program to convert decimal to binary number?
/*ALGORITHM:
 * Start
 * Program to convert decimal to binary.
 * Include the inputs and outputs using preprocessor directives.
 * Using pass by value concept to pass the value from defining function to main function
 * print the binary value in function.
 */
#include <stdio.h>
#include<stdlib.h>
void decimal_binary(int num); //declare the function
int main(){
    setbuf(stdout,NULL);
    int num; //declare and initialize the variable
    printf("Enter the number:"); //Enter the number
    scanf("%d",&num); //Read the number
decimal_binary(num); //function call
}
void decimal_binary(int num)
{
  printf("After Enter decimal number:");
  for(int i=0;i<num;i++){
      if(num&(1<<i)){
      printf("1");
  }
else{
      printf("0");
  }
  }
}
