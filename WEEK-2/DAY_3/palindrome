//WAP to find given number is palindrome or not?
#include<stdio.h>                                  
int main ()
{
  int n, rev=0, rem,temp;  //declaring the variable                                       
  printf ("enter a number");
  scanf ("%d",&n); //reading the varibales	
  temp=n;  //storing n variable to temp
  while(n>0)  //using while loop to execute some statements
  {
  rem= n%10;					
 rev=rev*10+rem;                            
  n =n/10;  
  }
  if(temp==n){
      printf("palindrome");
  }
  else{
      printf("not palindrome");
  }
}
